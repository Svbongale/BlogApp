<%- include("partials/header") %>

<div class="ui main text container segment" style="margin: 50px; padding-top: 100px;">
    <div class="ui huge header">Edit <%= blog.title%></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field"><label>Title</label> <input type="text" name="blog[title]" value="<%=blog.title%>" required> </div>
        <div class="field"><label>Image</label><input type="text" name="blog[image]" value="<%=blog.image%>" required>  </div>
        <div class="field"><label>Blog Content</label><textarea name="blog[body]"><%=blog.body%></textarea>  </div>
        <button type="submit" class="ui teal button">Submit</button>
            
    </form>
</div>

<%- include("partials/footer") %>
